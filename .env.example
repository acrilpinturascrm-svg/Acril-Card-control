# Variables de Entorno para Producción - ACRILCARD
# Copia este archivo como .env y configura los valores para tu entorno

# URL base pública de la aplicación (sin trailing slash)
# Ejemplo: https://acrilcard.netlify.app
REACT_APP_PUBLIC_BASE_URL=https://tu-dominio-aqui.com

# Entorno de ejecución
REACT_APP_ENVIRONMENT=production

# Configuración PWA
REACT_APP_PWA_ENABLED=true

# Configuración de WhatsApp
REACT_APP_WHATSAPP_ENABLED=true
REACT_APP_WHATSAPP_COUNTRY_CODE=52

# Configuración de seguridad
REACT_APP_SECURE_COOKIES=true

# Configuración de logs
REACT_APP_LOG_LEVEL=warn

# Configuración de API (si aplica)
# REACT_APP_API_URL=https://api.acrilcard.com

# Configuración de analytics (opcional)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Configuración de notificaciones (preparado para futuro)
# REACT_APP_NOTIFICATIONS_ENABLED=true

# Configuración de backup automático
REACT_APP_AUTO_BACKUP=true

# Configuración de Google OAuth 2.0 y Drive API
# Para inicio de sesión con Google y backup en la nube
# Obtener credenciales en: https://console.cloud.google.com/
# Ver guía completa en: GOOGLE_AUTH_SETUP.md
REACT_APP_GOOGLE_CLIENT_ID=tu_client_id_aqui.apps.googleusercontent.com
REACT_APP_GOOGLE_API_KEY=tu_api_key_aqui

# Configuración de backup
REACT_APP_BACKUP_ENABLED=true
REACT_APP_BACKUP_INTERVAL=24
REACT_APP_MAX_LOCAL_BACKUPS=10

# Configuración de cache
REACT_APP_CACHE_VERSION=1.0.0

# Configuración de debug (solo desarrollo)
REACT_APP_DEBUG_MODE=false
