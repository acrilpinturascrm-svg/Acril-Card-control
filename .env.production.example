# Variables de entorno para ACRILCARD - Producción
# Copie este archivo como .env.production y configure sus valores

# ========================================
# CONFIGURACIÓN BÁSICA DE PRODUCCIÓN
# ========================================

# URL pública de la aplicación (OBLIGATORIO para WhatsApp)
# Reemplace con su dominio real de producción
REACT_APP_PUBLIC_BASE_URL=https://su-dominio.netlify.app

# Entorno de ejecución
REACT_APP_ENVIRONMENT=production

# Versión de la aplicación
REACT_APP_VERSION=1.0.0

# ========================================
# CONFIGURACIÓN REGIONAL
# ========================================

# Código del país (ISO 3166-1 alpha-2)
# VE=Venezuela, MX=México, CO=Colombia, AR=Argentina, etc.
REACT_APP_COUNTRY_CODE=VE

# Código de país para WhatsApp (sin el +)
# 58=Venezuela, 52=México, 57=Colombia, 54=Argentina, etc.
REACT_APP_WHATSAPP_COUNTRY_CODE=58

# Nombre del negocio (aparece en mensajes de WhatsApp)
REACT_APP_BUSINESS_NAME=ACRIL Pinturas

# ========================================
# CONFIGURACIÓN DE PWA
# ========================================

# Habilitar funcionalidades PWA
REACT_APP_PWA_ENABLED=true

# Habilitar notificaciones push
REACT_APP_NOTIFICATIONS_ENABLED=true

# Habilitar instalación automática
REACT_APP_AUTO_INSTALL_PROMPT=true

# ========================================
# CONFIGURACIÓN DE SUPABASE (BACKEND)
# ========================================

# URL del proyecto Supabase (OBLIGATORIO)
# Obtener en: https://supabase.com/dashboard/project/_/settings/api
REACT_APP_SUPABASE_URL=https://su-proyecto.supabase.co

# Anon/Public Key de Supabase (OBLIGATORIO)
# Esta key es segura para usar en el frontend
REACT_APP_SUPABASE_ANON_KEY=su-anon-key-aqui

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Habilitar cookies seguras (solo HTTPS)
REACT_APP_SECURE_COOKIES=true

# Habilitar validación estricta
REACT_APP_STRICT_VALIDATION=true

# Nivel de logging (error, warn, info, debug)
REACT_APP_LOG_LEVEL=warn

# ========================================
# CONFIGURACIÓN DE ANALYTICS (OPCIONAL)
# ========================================

# Google Analytics ID
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Habilitar analytics
REACT_APP_ANALYTICS_ENABLED=false

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================

# Habilitar modo debug
REACT_APP_DEBUG=false

# Tamaño máximo de cache (en MB)
REACT_APP_MAX_CACHE_SIZE=50

# Tiempo de vida del cache (en minutos)
REACT_APP_CACHE_TTL=1440

# Habilitar compresión de datos
REACT_APP_COMPRESS_DATA=true

# ========================================
# CONFIGURACIÓN DE WHATSAPP BUSINESS
# ========================================

# Preferir WhatsApp Business sobre WhatsApp normal
REACT_APP_PREFER_WHATSAPP_BUSINESS=false

# Número de WhatsApp Business (opcional, para soporte)
# REACT_APP_SUPPORT_WHATSAPP=+58XXXXXXXXXX

# ========================================
# CONFIGURACIÓN DE DESARROLLO/TESTING
# ========================================

# Permitir localhost en WhatsApp (solo para testing)
REACT_APP_ALLOW_LOCALHOST_WHATSAPP=false

# Habilitar datos de prueba
REACT_APP_ENABLE_TEST_DATA=false

# Mostrar información de debug en UI
REACT_APP_SHOW_DEBUG_INFO=false
